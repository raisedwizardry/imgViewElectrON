{
    "name": "imgViewOn",
    "version": "0.9.9",
    "description": "imgViewOn",
    "keywords": [
        "image",
        "picture"
    ],
    "author": "raisedwizardry",
    "license": "MIT",
    "repository": "http://www.github.com/raisedwizardry/imgviewelectron",
    "main": "src/js/main.js",
    "scripts": {
        "start": "electron . --inspect=5858 ../SamplePhoto/sample1.jpg",
        "startone": "electron . ../SamplePhoto/sample1.jpg",
        "startalt": "electron . ../SamplePhoto/sample2.jpg",
        "starttwo": "electron . ../SamplePhoto/sample1.jpg ../SamplePhoto/sample2.jpg",
        "nofile": "electron .",
        "junkfile": "electron . ../SamplePhoto/junkfile.jpg",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.imgViewOn",
        "files": [
            "!tests.e2e/**"
        ],
        "extraFiles": [
            "assets/error.png",
            "assets/base.png"
        ],
        "win": {
            "target": [
                {
                    "target": "appx",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        },
        "mac": {
            "category": "public.app-category.productivity",
            "type": "distribution"
        },
        "fileAssociations": [
            {
                "ext": [
                    "gif",
                    "jpe",
                    "jpg",
                    "jpeg",
                    "jif",
                    "jfi",
                    "jfif",
                    "webp",
                    "bmp",
                    "svg",
                    "svgz",
                    "png",
                    "tiff"
                ],
                "description": "Image files",
                "role": "Viewer"
            }
        ]
    },
    "dependencies": {
        "image-size": "^0.8.3",
        "path": "^0.12.7"
    },
    "devDependencies": {
        "electron": "6.0.7",
        "electron-builder": "21.2.0"
    }
}
